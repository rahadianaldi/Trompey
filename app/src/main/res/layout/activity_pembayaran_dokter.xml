<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PembayaranDokter"
    android:background="@drawable/bgapps">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="407dp"
            android:layout_height="178dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/logo_trompet">
        </ImageView>

        <TextView
            android:id="@+id/judulmakanan2"
            android:layout_width="386dp"
            android:layout_height="151dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/rounded_1"
            android:elevation="20dp"
            android:gravity="center"
            android:text="Doctor"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp">

        </TextView>
    </RelativeLayout>


    <ScrollView

        android:layout_width="398dp"
        android:layout_height="377dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="404dp"
            android:layout_height="324dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.707"
            tools:layout_editor_absoluteX="-31dp">



            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:elevation="30dp"
                app:cardBackgroundColor="#5D6FAF"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="#005D6FAF"
                    android:gravity="center|top"
                    android:text="Silahkan transfer total belanjaan ke nomor rekening dibawah ini:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textView"
                    android:layout_width="340dp"
                    android:layout_height="184dp"
                    android:background="#005D6FAF"
                    android:gravity="center"
                    android:text="002-002-002-002"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textView3"
                    android:layout_width="340dp"
                    android:layout_height="222dp"
                    android:background="#005D6FAF"
                    android:gravity="center"
                    android:text="@string/garis"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textView4"
                    android:layout_width="340dp"
                    android:layout_height="263dp"
                    android:background="#005D6FAF"
                    android:gravity="center"
                    android:text="Kantong Belanja"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/nama_dokter"
                    android:layout_width="340dp"
                    android:layout_height="185dp"
                    android:background="#005D6FAF"
                    android:gravity="center|bottom"
                    android:text="NAMA DOKTER"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/harga_dokter"
                    android:layout_width="340dp"
                    android:layout_height="219dp"
                    android:background="#005D6FAF"
                    android:gravity="center|bottom"
                    android:text="HARGA DOKTER"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/jadwal_dokter"
                    android:layout_width="350dp"
                    android:layout_height="479dp"
                    android:background="#005D6FAF"
                    android:gravity="center"
                    android:text="JADWAL DOKTER"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/jam_janjian"
                    android:layout_width="350dp"
                    android:layout_height="550dp"
                    android:background="#005D6FAF"
                    android:gravity="center"
                    android:text="WAKTU JANJIAN"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />



                <Button
                    android:id="@+id/upload_bukti"
                    android:layout_width="212dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/judulmakanan"
                    android:text="@string/upload_bukti_transfer"
                    android:onClick="upload_bukti"
                    android:textColor="#FFFFFF" />


            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

            </Button>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
