<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroomingDetailsActivity"
    android:background="@drawable/bgapps">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="407dp"
            android:layout_height="178dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/logo_trompet">
        </ImageView>

        <TextView
            android:id="@+id/petgrooming"
            android:layout_width="386dp"
            android:layout_height="151dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/rounded_1"
            android:elevation="20dp"
            android:gravity="center"
            android:text="Pet Grooming"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp">

        </TextView>
    </RelativeLayout>


    <ScrollView

        android:layout_width="398dp"
        android:layout_height="310dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="404dp"
            android:layout_height="324dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_Diamond"
            app:layout_constraintVertical_bias="0.707"
            tools:layout_editor_absoluteX="-31dp">



            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:elevation="30dp"
                app:cardBackgroundColor="#5D6FAF"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">
                <TextView
                    android:id="@+id/tv_paket"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="#005D6FAF"
                    android:gravity="center|top"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:background="#005D6FAF"
                    android:gravity="center|left"
                    android:text="  Paket"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:background="#005D6FAF"
                    android:gravity="left|bottom"
                    android:text="  _______________"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_isi"
                    android:layout_width="340dp"
                    android:layout_height="280dp"
                    android:background="#005D6FAF"
                    android:gravity="center|left"
                    android:text="  Cukur Bulu"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>



                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:background="#005D6FAF"
                    android:gravity="left|bottom"
                    android:text="  _______________"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/tv_harga"
                    android:layout_width="340dp"
                    android:layout_height="480dp"
                    android:background="#005D6FAF"
                    android:gravity="center|left"
                    android:text="  Harga : Rp.250.000"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>


                <Button
                    android:id="@+id/book"
                    android:layout_width="212dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_1"
                    android:text="@string/bayar_dan_pesan"
                    android:onClick="Book"
                    android:textColor="#8A97DD"/>



            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

            </Button>


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>